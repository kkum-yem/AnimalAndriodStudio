<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:orientation="vertical"
    android:background="@color/graylight"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_height="340dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@color/colorPink"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileimge_iv"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/splash"
                tools:srcCompat="@drawable/baseline_person_black_48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kyobohandwriting"
                android:text="복이사랑"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/newworldfont"
                android:text="가입일:2019.11.23"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_height="95dp"
            android:layout_width="400dp"
            android:layout_marginTop="230dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="21sp"
        android:text="알림"
        android:fontFamily="@font/kyobohandwriting"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorOrange"
        android:text="52"
        android:fontFamily="@font/kyobohandwriting"
        android:paddingTop="10dp"/>

</LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="21sp"
        android:text="관심있는 동물"
        android:fontFamily="@font/kyobohandwriting"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorOrange"
        android:text="16"
        android:fontFamily="@font/kyobohandwriting"
        android:paddingTop="10dp"/>

</LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="21sp"
        android:text="팔로워"
        android:fontFamily="@font/kyobohandwriting"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorOrange"
        android:text="122"
        android:fontFamily="@font/kyobohandwriting"
        android:paddingTop="10dp"/>

</LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="360dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

    <LinearLayout
        android:background="@color/colorPupple"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="25dp">

    <ImageView
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:src="@drawable/ic_https1_black_24dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="개인/정보"
        android:fontFamily="@font/kyobohandwriting"
        android:paddingLeft="20dp"
        android:id="@+id/rhdwl"/>

</LinearLayout>
        <LinearLayout
            android:id="@+id/alram_lin"
            android:background="@color/colorPupple"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:paddingLeft="25dp">

    <ImageView
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:src="@drawable/ic_notifications_black_24dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="알림 설정"
        android:fontFamily="@font/kyobohandwriting"
        android:paddingLeft="20dp"
        android:id="@+id/rodl"/>

</LinearLayout>

        <LinearLayout
            android:id="@+id/email_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPupple"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_drafts_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/kyobohandwriting"
                android:paddingLeft="20dp"
                android:text="문의하기"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/logout_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_line"
                android:fontFamily="@font/kyobohandwriting"
                android:text="L o g O u t"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".8" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</LinearLayout>
